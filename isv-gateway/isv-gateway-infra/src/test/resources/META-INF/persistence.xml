<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="default">
        <provider>org.hibernate.reactive.provider.ReactivePersistenceProvider</provider>

        <class>org.myddd.vertx.oauth2.domain.OAuth2Client</class>
        <class>org.myddd.vertx.oauth2.domain.OAuth2Token</class>
        <class>com.foreverht.isvgateway.domain.ISVClient</class>
        <class>com.foreverht.isvgateway.domain.ISVClientToken</class>
        <class>com.foreverht.isvgateway.domain.ISVSuiteTicket</class>
        <class>com.foreverht.isvgateway.domain.ISVAuthCode</class>
        <class>com.foreverht.isvgateway.domain.ProxyEmployee</class>
        <class>com.foreverht.isvgateway.domain.ProxyOrganization</class>
        <class>com.foreverht.isvgateway.domain.ProxyEmpOrgRelation</class>


        <properties>

            <!-- MySQL -->
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://127.0.0.1:3306/isv_gateway"/>

            <!-- Credentials -->
            <property name="javax.persistence.jdbc.user"
                      value="root"/>
            <property name="javax.persistence.jdbc.password"
                      value="admin1234"/>

            <!-- The Vert.x SQL Client connection pool size -->
            <property name="hibernate.connection.pool_size"
                      value="10"/>

            <!-- Automatic schema export -->
            <property name="javax.persistence.schema-generation.database.action"
                      value="drop-and-create"/>

            <!-- SQL statement logging -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.highlight_sql" value="true"/>

        </properties>

    </persistence-unit>

</persistence>